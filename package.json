{
  "name": "ng-task-monitor",
  "version": "2.0.0",
  "description": "This version is built in ElectronJs",
  "author": {
    "name": "Sára Krisztián",
    "email": "",
    "url": ""
  },
  "main": "./electronJs/app.js",
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start --app-path ./electronJs/app.js",
    "start.electron": "electron ./electronJs/app.js --trace-warnings",
    "start.forge": "electron-forge start",
    "build.prod": "ng build --configuration production --base-href ./",
    "build.electron.withtemplate": "npm run build.prod && npm run start.electron",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --karma-config karma.conf.js --web-worker-ts-config tsconfig.worker.json",
    "lint": "ng lint",
    "package": "electron-forge package && mkdir out\\TaskMonitor-win32-x64\\storer && xcopy /s /y dist\\ng-task-monitor out\\TaskMonitor-win32-x64\\resources\\app\\dist\\ng-task-monitor",
    "make": "electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~14.2.8",
    "@angular/cdk": "~14.2.6",
    "@angular/common": "~14.2.8",
    "@angular/compiler": "~14.2.8",
    "@angular/core": "~14.2.8",
    "@angular/forms": "~14.2.8",
    "@angular/material": "~14.2.6",
    "@angular/platform-browser": "~14.2.8",
    "@angular/platform-browser-dynamic": "~14.2.8",
    "@angular/router": "~14.2.8",
    "chart.js": "^3.9.1",
    "ng2-charts": "^4.0.1",
    "rxjs": "~7.5.7",
    "tslib": "^2.4.1",
    "zone.js": "~0.11.8",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.8",
    "@angular-eslint/builder": "14.4.0",
    "@angular-eslint/eslint-plugin": "14.4.0",
    "@angular-eslint/eslint-plugin-template": "14.4.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "14.4.0",
    "@angular/cli": "~14.2.8",
    "@angular/compiler-cli": "~14.2.8",
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-deb": "^6.0.0",
    "@electron-forge/maker-rpm": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@types/jasmine": "^4.3.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "electron": "^21.2.2",
    "eslint": "^8.26.0",
    "jasmine-core": "^4.5.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "puppeteer": "~19.2.0",
    "typescript": "~4.8.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "TaskMonitor",
        "out": "out",
        "ignore": [
          "node_modules",
          "\\.[abegv].*",
          "plan",
          "src",
          "storer",
          "tsconfig.*.json",
          "angular.json",
          "karma.conf.js"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ng_task_monitor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
