{
  "name": "ng-task-monitor",
  "version": "2.0.0",
  "description": "This version is built in ElectronJs",
  "author": {
    "name": "Sára Krisztián",
    "email": "",
    "url": ""
  },
  "main": "./electronJs/app.js",
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start --app-path ./electronJs/app.js",
    "start.electron.withtemplate": "npm run build.prod && npm run start.electron",
    "start.electron": "electron ./electronJs/app.js --trace-warnings",
    "start.forge": "electron-forge start",
    "build.prod": "ng build --configuration production --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --karma-config karma.conf.js --web-worker-ts-config tsconfig.worker.json",
    "package": "electron-forge package && mkdir out\\TaskMonitor-win32-x64\\storer",
    "make": "electron-forge make"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/material": "^12.2.13",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "chart.js": "^3.8.0",
    "electron-squirrel-startup": "^1.0.0",
    "ng2-charts": "^3.0.11",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.15",
    "@angular/cli": "~12.2.15",
    "@angular/compiler-cli": "~12.2.0",
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.20.45",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "electron": "^20.0.3",
    "eslint": "^8.7.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "puppeteer": "~13.3.1",
    "typescript": "~4.3.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "TaskMonitor",
        "out": "out",
        "ignore": [
          "node_modules",
          "\\.[begv].*",
          "plan",
          "src",
          "storer",
          "tsconfig.*.json",
          "angular.json",
          "karma.conf.js"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ng_task_monitor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
