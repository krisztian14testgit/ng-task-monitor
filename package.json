{
  "name": "ng-task-monitor",
  "version": "3.0.0",
  "description": "This version is built in ElectronJs with Angular 21",
  "license": "MIT",
  "author": {
    "name": "Sára Krisztián",
    "email": "",
    "url": ""
  },
  "main": "./electronJs/app.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start.electron": "electron ./electronJs/app.js --trace-warnings",
    "start.forge": "electron-forge start",
    "build.prod": "ng build --configuration production --base-href ./",
    "build.electron.withtemplate": "npm run build.prod && npm run start.electron",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --karma-config karma.conf.js --web-worker-ts-config tsconfig.worker.json",
    "lint": "ng lint",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "private": true,
  "overrides": {
    "tar": "7.5.7",
    "tmp": "0.2.5"
  },
  "dependencies": {
    "@angular/animations": "~21.1.2",
    "@angular/cdk": "~21.1.2",
    "@angular/common": "~21.1.2",
    "@angular/compiler": "~21.1.2",
    "@angular/core": "~21.1.2",
    "@angular/forms": "~21.1.2",
    "@angular/material": "~21.1.2",
    "@angular/platform-browser": "~21.1.2",
    "@angular/platform-browser-dynamic": "~21.1.2",
    "@angular/router": "~21.1.2",
    "chart.js": "^4.5.1",
    "electron-squirrel-startup": "^1.0.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.2",
    "@angular-eslint/builder": "^21.2.0",
    "@angular-eslint/eslint-plugin": "^21.2.0",
    "@angular-eslint/eslint-plugin-template": "^21.2.0",
    "@angular-eslint/schematics": "^21.2.0",
    "@angular-eslint/template-parser": "^21.2.0",
    "@angular/cli": "~21.1.2",
    "@angular/compiler-cli": "~21.1.2",
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@types/jasmine": "^6.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "electron": "^40.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "jasmine-core": "~6.0.1",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.2.0",
    "puppeteer": "~24.36.1",
    "typescript": "~5.9.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "TaskMonitor",
        "executableName": "TaskMonitor",
        "out": "out",
        "ignore": [
          "node_modules",
          "\\.[abegv].*",
          "plan",
          "angular-upgrade-plan",
          "electronJs-upgrade-plan",
          "src",
          "storer",
          "tsconfig.*.json",
          "angular.json",
          "karma.conf.js"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ng_task_monitor"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "bin": "TaskMonitor"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "bin": "TaskMonitor"
            }
          }
        }
      ]
    }
  }
}
